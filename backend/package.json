  "description": "Backend for a grocery list application that allows creating, managing and sharing grocery lists with real time experience",
  "main": "dist/index.ts",
  "author": "Pedro Weber Mendon√ßa",
  "dependencies": {
    "superstruct": "^1.0.3",
    "tslib": "^2.0.1",
    "uuid": "^8.3.2"
  },
  "license": "ISC",
  "devDependencies": {
    "@serverless/typescript": "^3.15.2",
    "@types/aws-lambda": "^8.10.95",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.0.26",
    "@types/sinon": "^10.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "axios": "^1.4.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.7.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^11.0.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.15.2",
    "serverless-bundle": "^5.3.0",
    "serverless-offline": "^12.0.0",
    "sinon": "^14.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test:unit": "nyc ts-mocha --type-check --require tsconfig-paths/register -p tests/tsconfig.json 'tests/unit/**/*.ts'",
    "test:e2e": "ts-mocha --timeout 10000 --type-check --require tsconfig-paths/register -p tests/tsconfig.json 'tests/e2e/**/*.ts'",
    "offline": "npm run build && npx serverless offline start --stage development",
    "build": "rimraf dist && tsc",
    "dev": "npx nodemon --exec npm run offline",
    "deploy:dev": "npm run build && npx serverless deploy --verbose --aws-profile grocery-list-dev --stage dev",
    "remove:dev": "npx serverless remove --verbose --aws-profile grocery-list-dev --stage dev",
    "deploy": "npm run build && npx serverless deploy --verbose",
    "remove": "npx serverless remove --verbose",
    "lint": "eslint . --ext .ts"
  }
}